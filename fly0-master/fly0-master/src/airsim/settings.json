{
  "SeeDocsAt": "https://microsoft.github.io/AirSim/settings/",
  "SettingsVersion": 1.2,

  "SimMode": "Multirotor",

  "CameraDefaults": {
        "CaptureSettings": [
            {
                "ImageType": 0,
                "Width": 720,
                "Height": 480,
                "FOV_Degrees": 90
            },
            {
                "ImageType": 1,
                "Width": 720,
                "Height": 480,
                "FOV_Degrees": 90
            },
            {
                "ImageType": 2,
                "Width": 720,
                "Height": 480,
