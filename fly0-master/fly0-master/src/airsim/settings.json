                 "VerticalFOVLower": -25,
                 "HorizontalFOVStart": -60,
                 "HorizontalFOVEnd": 60,
                 "DrawDebugPoints": true,
                 "DataFrame": "SensorLocalFrame"
              },
              "LidarSensor2": {
                 "SensorType": 6,
                  "Enabled" : true,
                  "NumberOfChannels": 4,
                  "RotationsPerSecond": 10,
                  "PointsPerSecond": 10000,
                  "X": 0, "Y": 0, "Z": -1,
                  "Roll": 0, "Pitch": 0, "Yaw" : 0,
                  "VerticalFOVUpper": -15,
                  "VerticalFOVLower": -25,
